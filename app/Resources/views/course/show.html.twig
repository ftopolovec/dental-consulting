{% extends 'base.html.twig' %}

{% block body %}
    <h1>Course</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ course.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ course.content }}</td>
            </tr>
            <tr>
                <th>Datestart</th>
                <td>{% if course.datestart %}{{ course.datestart|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateend</th>
                <td>{% if course.dateend %}{{ course.dateend|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Abstract</th>
                <td>{{ course.abstract }}</td>
            </tr>
            <tr>
                <th>Path</th>
                <td>{{ course.path }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cms_course_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cms_course_edit', { 'id': course.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
